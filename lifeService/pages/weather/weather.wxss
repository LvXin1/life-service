/* pages/weather/weather.wxss */
.banner{
  width:100%;
}
.banner image{display:block;width:100%;height:100%;}
.content{

}
.nowCity{
  padding:10rpx 20rpx;
  font-size:14px;
  border-bottom:10rpx solid #f8f8f8;
  display:flex;
  justify-content: space-between;
}
.switchBtn{
  /* border:1px solid #00BFFF; */
  display:inline-block;
  padding:5rpx 20rpx;
  margin-left:30px;
  color:#00BFFF;
}
.nowWeather{
  padding:10rpx 20rpx 30rpx;
  background:#f8f8f8;
}
.temper{
  font-size:50px;
  color:#00BFFF;
  display:block;
  width:100%;
  text-align:center;
  padding-top:80rpx;
}
.time{
  padding-top:40rpx;
  padding-bottom:10rpx;
  margin:0 30rpx;
  font-size:14px;
  /* text-align:center; */
  border-bottom:1px solid #00BFFF;
}
.weather-tag{
  display:flex;
  justify-content: space-around;

}
.weather-tag text{
  padding:10rpx 20rpx;
  font-size:14px;
}
.weather-advice{
  padding:10rpx 30rpx;
  font-size:14px;
  color:#999;
  text-indent:40rpx;
}
.someDays{
  padding:20rpx 20rpx;
}
.someDays .someDays-list{
  width:100%;
  padding:10rpx 0rpx;
  border-bottom:1px solid #f8f8f8;
}
.someDays .someDays-list text{
  display:inline-block;
  width:33%;
  font-size:14px;
}
